<div class="devise-form-holder flex-center">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, :html => {:class => 'devise-form-border'}, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <p>email</p>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <p>password</p>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <p>password confirmation</p>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-light", :id => "registration-sign-up-btn" %>
    </div>
  <% end %>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>DC Food Truck</title>
    <%= csrf_meta_tags %>

    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:100,200,300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora|Playfair+Display" rel="stylesheet">
    <!--Scripts-->
    <script src="//maps.google.com/maps/api/js?key=AIzaSyB7voNn6vJmch6WZiuqp6k16rkj1Y_LCYE"></script>
      <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body <%= punchbox_attributes %>>
    <div class="header-holder">

      <div class="header-alert">
        <p class="notice notification"><%= notice %></p>
        <p class="alert notification"><%= alert %></p>
      </div>

      <a class="header-title noselect" href="<%=companies_path%>">DC Food Trucks</a>

      <div class="header-user">
        <% if !current_user %>
          <%= link_to "Sign Up", new_user_registration_path %>
          <%= link_to "Log In", new_user_session_path %>
        <% else %>
          <div class="flex-center">
            <p>
              <%= current_user.email %>
            </p>
            <%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>
          </div>
        <% end %>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
